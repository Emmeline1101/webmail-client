{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2015", "es2017", "dom"],
    "removeComments": true,
    "jsx": "react",
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "components/*": ["src/components/*"]
    },
    "moduleResolution": "node",
    "strict": true
  }
}